{
  "extends": "@repo/typescript-config/react-library.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "src/index.tsx",
    "src/lib/**/*",
    "src/components/index.tsx",
    "src/components/ui/index.tsx",
    "src/components/ui/button.tsx",
    "src/components/ui/dialog.tsx"
  ],
  "exclude": ["node_modules", "dist"]
}
